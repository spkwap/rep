#include <iostream>
#include <iomanip>
#include <math.h>
using namespace std;
int main()
{
    for (int x = 0; x <= 10; x++)
    {
        double f1, f2, f3;
        f1 = 1.0 / x;
        f2 = log10(x);
        f3 = sin (x / 20.0 * 2.0 * M_PI);
        cout << setw(3) << x;
        cout << setw(10) << f1;
        cout << setw(10) << f2;
        cout << setw(10) << f3;
    }
}

